<Page x:Class="ЗАЯ.Pages.Regis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ЗАЯ.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Regis">

    <Grid  Background="Beige">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="250" Width="210">
            <TextBlock Text="Логин" Margin="15"/>
            <TextBox x:Name="txtUsername" Style="{StaticResource RoundCornerTextBox}"/>
            <TextBlock Text="Пароль" Margin="15"/>
            <PasswordBox x:Name="txtPassword" Style="{StaticResource RoundCornerPasswordBox}"/>
            <Button Content="Вход" Click="Login_Click" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
